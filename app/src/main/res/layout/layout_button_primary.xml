<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ct_container"
    android:layout_width="match_parent"
    android:layout_height="@dimen/height_button"
    android:background="@drawable/bg_rectangle_primary_radius_10">

    <androidx.appcompat.widget.AppCompatTextView
        android:fontFamily="@font/raleway_medium"
        android:id="@+id/tv_text_left"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:gravity="center"
        android:lines="1"
        android:padding="@dimen/spacing_small"
        android:textSize="@dimen/font_12"
        android:visibility="gone"
        tools:text="Rp. 500.000"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginStart="@dimen/spacing_small"
        android:layout_marginEnd="@dimen/spacing_small"
        android:fontFamily="@font/raleway_bold"
        android:gravity="center_horizontal"
        android:lines="1"
        android:textColor="@color/white"
        android:textSize="@dimen/font_normal"
        tools:text="Complete Order" />

    <FrameLayout
        android:padding="8dp"
        android:id="@+id/ct_icon_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true">

        <ImageView
            android:layout_gravity="center_vertical"
            android:id="@+id/iv_icon_right"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:scaleType="centerInside"
            tools:ignore="ContentDescription" />
    </FrameLayout>
</RelativeLayout>